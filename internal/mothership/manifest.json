{
	"manifest_version": 2,
	"name": "Mothership",
	"description": "Controls tbml features in the browser",
	"version": "1.0",

	"background": {
		"scripts": [
			"build-vars.js",
			"background.js"
		]
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "mothership@tbml.t0ast.cc"
		}
	},
	"permissions": [
		"nativeMessaging",
		"tabs"
	]
  }
